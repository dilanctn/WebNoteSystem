@using EntityLayer.Conrete
@model List<Notes>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Not Başlığı</th>
        <th>Not İçeriği</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Tıtle</td>
            <td>@item.Content</td>
            <td><a href="/Notes/DeleteNotes/@item.Id" class="btn btn-outline-danger">Sil</a> </td>
            <td><a href="/Notes/UpdateNotes/@item.Id" class="btn btn-outline-success">Güncelle</a> </td>
        </tr>
    }

</table>
<a href="/NotesTest/AddNotes/" class="btn btn-outline-primary">Yeni Not Girişi</a>

